<p id="notice"><%= notice %></p>
<% if current_user %>
  <h1>Apikeys</h1>
  <table>
    <thead>
      <tr>
        <th>Api key</th>
        <th>Count</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @apikeys.each do |apikey| %>
        <%if apikey.user == current_user %>
          <tr>
            <td><%= apikey.api_key %></td>
            <td><%= apikey.count %></td>
            <td><%= apikey.user_id %></td>
            <td><%= link_to 'Destroy', apikey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Apikey', new_apikey_path %>
<% end %>